<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="nighttheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="greentheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary_dark</item>
        <item name="colorAccent">@color/green_accent</item>
    </style>

    <style name="redtheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryDark">@color/red_primary_dark</item>
        <item name="colorAccent">@color/red_accent</item>
    </style>

    <style name="bluetheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="pinktheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/pink_primary</item>
        <item name="colorPrimaryDark">@color/pink_primary_dark</item>
        <item name="colorAccent">@color/pink_accent</item>
    </style>

    <style name="deep_purpletheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/deep_purple_primary</item>
        <item name="colorPrimaryDark">@color/deep_purple_primary_dark</item>
        <item name="colorAccent">@color/deep_purple_accent</item>
    </style>

    <style name="cyantheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/cyan_primary</item>
        <item name="colorPrimaryDark">@color/cyan_primary_dark</item>
        <item name="colorAccent">@color/cyan_accent</item>
    </style>

    <style name="ambertheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/amber_primary</item>
        <item name="colorPrimaryDark">@color/amber_primary_dark</item>
        <item name="colorAccent">@color/amber_accent</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>

    </style>

    <style name="poptheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="overlapAnchor">false</item>
    </style>
    <style name="alertdialogtheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>
    <style name="operaani">
        <item name="android:windowEnterAnimation">@anim/push_btm_in</item>
    </style>

    <style name="topin">
        <item name="android:windowExitAnimation">@anim/push_top_in</item>
    </style>
    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>


    <style name="custom_progress_style">
        <item name="android:indeterminateDrawable">@drawable/pb_custom_shape</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

</resources>
